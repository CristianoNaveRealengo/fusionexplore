# ========================================
# MERGE EXPLORE - CONFIGURAÇÕES DE AMBIENTE
# ========================================

# Servidor de Desenvolvimento
VITE_PORT=5174
VITE_HOST=localhost
VITE_HTTPS=true

# Configurações WebXR (Meta Quest 3)
VITE_WEBXR_ENABLED=true
VITE_HAND_TRACKING_ENABLED=true
VITE_TELEPORT_ENABLED=true

# Configurações de Física
VITE_PHYSICS_DEBUG=false
VITE_GRAVITY=-2
VITE_COLLISION_ENABLED=true

# Configurações de Performance
VITE_SHADOW_ENABLED=true
VITE_ENVIRONMENT_PRESET=forest
VITE_LIGHTING_INTENSITY=0.6

# Configurações de Build
VITE_BUILD_TARGET=es2020
VITE_MINIFY=true

# URLs de Assets (CDN opcional)
VITE_AFRAME_CDN=https://aframe.io/releases/1.4.0/aframe.min.js
VITE_IWER_CDN=https://unpkg.com/iwer@2.1.1/build/iwer.min.js

# Configurações de Debug
VITE_DEBUG_MODE=false
VITE_CONSOLE_LOGS=true